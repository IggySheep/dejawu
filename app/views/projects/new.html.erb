<h1>Neue Aufgabe anlegen</h1>

<%= simple_form_for @project do |f| %>
 <%= f.input :title, label: "Projekttitel" %>
   <%= f.input :description, label: "Beschreibung" %>
  <%= f.input :noInt, label: "Interne Auftragsnummer" %>
  <%= f.input :noExt, label: "Externe Auftragsnummer" %>
  <%= f.input :workTodo, label: "Zu erledigende Arbeiten" %>
