<% if (@project.liefTermn-Time.now)<=0 %>
    

     <div><h2><span style="color:#FF0000"> Noch <%= dd%> Tage <%= hh %> Stunden  <%= mm %> Minuten und <%= ss %> Sekunden  </h2></span></div>
        <div><h2><span style="color:#FF0000"> Liefertermin überschritten!</h2></span></div>

<%else%>
 <div><h2><span style="color:#0CF604"><b> Noch <%= dd%> Tage <%= hh %> Stunden  <%= mm %> Minuten und <%= ss %> Sekunden </b></h2></span></div>
<%end%>
</div>
</div>


