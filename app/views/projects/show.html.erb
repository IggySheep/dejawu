


<h1><%= @project.title %></h1>

<h3>Beschreibung: </h3>
<p><%= @project.description %></p>

<h3>Interne Projektnummer: </h3>
  <p> <%= @project.noInt %></p>

  <h3>Externe Projektnummer: </h3>
   <p> <%= @project.noExt %></p>

   <h3>Zu erledigende Arbeiten </h3>
    <p> <%= @project.workTodo %></p>

	<%= link_to edit_project_path do%>
	<i class="far fa-edit"></i>
	<% end %>

	<%= link_to project_path(@project) , method: :delete, data: { confirm: "Bist Du sicher?"} do %>
	<i class="far fa-trash-alt"></i>
   <% end %>
   
	<%= link_to root_path do%>
	<i class="far fa-hand-point-left"></i>
	<% end %>
