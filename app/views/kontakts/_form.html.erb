
<%= simple_form_for(@kontakt) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :vorname %>
    <%= f.input :abteilung %>
    <%= f.input :position %>
    <%= f.input :telno %>
    <%= f.input :faxno %>
    <%= f.input :emai %>
    
     <%= f.select :kunden_id , Kunden.all.collect{|d| [d.firma, d.id ]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
